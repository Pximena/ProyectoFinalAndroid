<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RaisedButtonDark">
        <item name="colorButtonNormal">#18ffff</item>
        <item name="colorControlHighlight">#29B6F6</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditTextWhite">
        <item name="android:textColorHint">#00b8d4</item>
        <item name="android:textSize">30dp</item>
        <item name="colorControlNormal">#18ffff</item>
        <item name="colorControlActivated">#00e5ff</item>
    </style>

</resources>
